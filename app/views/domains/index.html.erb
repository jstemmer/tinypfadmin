<h1>Listing domains</h1>

<table cellpadding="0" cellspacing="0">
  <tr>
    <th>Domain</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @domains.each do |domain| %>
  <tr>
    <td><%= domain.domain %></td>
    <td class="link"><%= link_to 'Edit', edit_domain_path(domain) %></td>
    <td class="link"><%= link_to 'Delete', domain, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<div class="button right">
  <%= link_to 'New Domain', new_domain_path %>
</div>
