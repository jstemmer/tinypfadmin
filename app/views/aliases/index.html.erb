<h1>Listing aliases</h1>

<table>
  <tr>
    <th>Alias</th>
    <th>User</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @aliases.each do |a| %>
  <tr>
    <td><%= a.alias %></td>
    <td><%= link_to a.login, user_path(a.user_id) %></td>
    <td class="link"><%= link_to 'Edit', edit_alias_path(a) %></td>
    <td class="link"><%= link_to 'Destroy', a, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<div class="button right">
  <%= link_to 'New Alias', new_alias_path %>
</div>
